<h1>New Response</h1>

<%= form_with(url: 'responses/new', scope: :response, local: true) do  |f| %>
  
  <%  @questions.each do |question| %>
    
    <h2><%= question.content %></h2>
    
    <% case question.question_type
      when 0 %>
        <%= f.text_area(:content, value: '') %>
          
      <% when 1 %>
        <% question.options.each do |option| %>
          <%= label_tag("#{question.id}_#{option}", option)  %>
          <%= radio_button_tag(question.id, option) %>
          <% end %>
          
      <% when 2 %>
        <%= f.select(:content, question.options, {}, multiple: true, size: 10) %>
      <% end %>
  <% end %></br>
    
  <%= f.submit('Submit answers') %>
<% end %>
 
<%= link_to 'Back', responses_path %>
