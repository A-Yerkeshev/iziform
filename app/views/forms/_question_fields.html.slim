.row.nested-fields.mb-4.ps-3
  .col
    .row
      .col.field
        .row
          .col
            = f.label :content, 'Question'
        .row.mb-3
          .col.col-md-8.col-xl-6
            = f.text_area :content, rows: 5, class: 'form-control', required: true
    .row.mb-2
      .col
        | Question type
    .row.ps-2
      .col.field
        = f.radio_button :question_type, Question::QUESTION_TYPES[:text], required: true
        =< f.label :question_type, 'Text input'
    .row.ps-2
      .col.field
        = f.radio_button :question_type, Question::QUESTION_TYPES[:one_choice], required: true
        =< f.label :question_type, 'Single-choice'
    .row.mb-3.ps-2
      .col.field
        = f.radio_button :question_type, Question::QUESTION_TYPES[:multiple_choices], required: true
        =< f.label :question_type, 'Multiple-choice'
    .row.mt-3
      .col
        = link_to_remove_association "Remove question", f, class: 'btn btn-secondary'